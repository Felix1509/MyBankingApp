@model IEnumerable<MyBankingApp.Data.Entitites.Bankkonto>

@if (Model != null && Model.Any())
{
    <div style="padding: 20px;">
        @foreach (var account in Model.OrderByDescending(a => a.AktuellerSaldo))
        {
            <div class="account-item" style="padding: 15px; border-bottom: 1px solid #e5e7eb;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 style="margin: 0; font-weight: 600;">@account.Bankname</h5>
                        <p style="margin: 5px 0; color: #6b7280; font-size: 0.875rem;">
                            @account.Kontoinhaber - @account.IBAN
                        </p>
                        <span class="badge badge-secondary">@account.Kontotyp</span>
                    </div>
                    <div class="text-right">
                        <h4 style="margin: 0; color: @(account.AktuellerSaldo >= 0 ? "#10b981" : "#ef4444")">
                            @account.AktuellerSaldo.ToString("C")
                        </h4>
                        <small class="text-muted">@account.Waehrung</small>
                    </div>
                </div>
                <div style="margin-top: 10px;">
                    <a href="@Url.Action("Details", "BankAccount", new { id = account.Id })" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye"></i> Details
                    </a>
                    <a href="@Url.Action("Index", "Transaction", new { kontoId = account.Id })" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-list"></i> Transaktionen
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div style="text-align: center; padding: 40px; color: #6b7280;">
        <i class="fas fa-university fa-3x" style="color: #e5e7eb; margin-bottom: 20px; display: block;"></i>
        <h4>Keine Bankkonten gefunden</h4>
        <p>Fügen Sie Ihr erstes Bankkonto hinzu, um loszulegen.</p>
        <a href="@Url.Action("Create", "BankAccount")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Bankkonto hinzufügen
        </a>
    </div>
}