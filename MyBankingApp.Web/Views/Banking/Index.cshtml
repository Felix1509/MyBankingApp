@model MyBankingApp.Web.ViewModels.DashboardVM
@{
    ViewBag.Title = "Banking Dashboard";
}

<!-- Font Awesome für Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Dashboard Styles -->
@Html.Partial("_DashboardStyles")

<div class="dashboard-container">
    <!-- Header -->
    @Html.Partial("_DashboardHeader", Model)

    <!-- Alerts -->
    @Html.Partial("_DashboardAlerts")

    <!-- Stats Cards -->
    @Html.Partial("_DashboardStats", Model)

    <!-- Main Content -->
    <div class="row">
        <!-- Bankkonten -->
        <div class="col-md-8">
            @Html.Partial("_BankkontenCard")
        </div>

        <!-- Letzte Transaktionen -->
        <div class="col-md-4">
            @Html.Partial("_RecentTransactionsCard")
        </div>
    </div>

    <!-- Quick Actions -->
    @Html.Partial("_QuickActions")
</div>